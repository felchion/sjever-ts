string s_good(int i)
{
	switch(i){
		case 10..20:	return "无比";
		case 9:		return "无比";
		case 8:		return "极其";
		case 7:		return "绝对";
		case 6:		return "极为";
		case 5:		return "相当";
		case 4:		return "十分";
		case 3:		return "非常";
		case 2:		return "比较";
		case 1:		return "还算";
		case -1:	return "不怎么";
		case -2:	return "很不";
		case -3:	return "极不";
		default:	return "一般";
	}
}

string s_power(int i)
